{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017"],
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["src/*", "node_modules/*"]
    }
  },
  "include": ["./src/server/**/*", "./src/types/**/*"]
}
